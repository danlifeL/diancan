.container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 购物车列表样式 */
.cart-list {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
  position: relative;
}

.cart-item:last-child {
  border-bottom: none;
}

.select-btn {
  margin-right: 20rpx;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #f9f9f9;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-price {
  font-size: 30rpx;
  color: #ff69b4;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.btn {
  width: 50rpx;
  height: 50rpx;
  background-color: #f8f8f8;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  transition: all 0.3s;
}

.btn.plus {
  background-color: #ffdead;
  color: #ff69b4;
}

.btn.disabled {
  color: #ccc;
}

.quantity {
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.delete-btn {
  padding: 20rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

/* 推荐商品样式 */
.recommend-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
  border-left: 6rpx solid #ff69b4;
}

.recommend-list {
  white-space: nowrap;
  margin-top: 20rpx;
}

.recommend-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
  position: relative;
}

.recommend-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: #f9f9f9;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.recommend-name {
  font-size: 24rpx;
  color: #333;
  display: block;
  margin-top: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.recommend-price {
  font-size: 24rpx;
  color: #ff69b4;
  font-weight: bold;
  display: block;
  margin-top: 6rpx;
}

.add-btn {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #ff69b4;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(255, 105, 180, 0.3);
}

/* 购物车底部样式 */
.cart-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.select-all {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.select-all text {
  margin-left: 10rpx;
}

.total-info {
  flex: 1;
  display: flex;
  align-items: baseline;
  justify-content: flex-end;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.total-price {
  font-size: 36rpx;
  color: #ff69b4;
  font-weight: bold;
}

.checkout-btn {
  width: 220rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #ff69b4;
  color: #fff;
  font-size: 28rpx;
  border-radius: 35rpx;
  padding: 0;
  box-shadow: 0 4rpx 8rpx rgba(255, 105, 180, 0.3);
  transition: all 0.3s;
}

.checkout-btn:active {
  transform: scale(0.96);
  opacity: 0.8;
}

/* 空购物车样式 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 150rpx;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.go-shopping-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ff69b4;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(255, 105, 180, 0.3);
  transition: all 0.3s;
}

.go-shopping-btn:active {
  transform: scale(0.96);
  opacity: 0.8;
} 