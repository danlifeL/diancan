.container {
  padding-bottom: 120rpx;
  background: #f8f8f8;
}

/* 收货地址样式 */
.address-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.address-info {
  display: flex;
  flex-direction: column;
}

.user-info {
  margin-bottom: 10rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.phone {
  font-size: 28rpx;
  color: var(--light-text);
}

.address-detail {
  font-size: 28rpx;
  color: var(--text-color);
}

.no-address {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: var(--light-text);
}

/* 订单部分样式 */
.order-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: var(--text-color);
}

.food-list {
  display: flex;
  flex-direction: column;
}

.food-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.food-item:last-child {
  border-bottom: none;
}

.food-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--border-radius);
  margin-right: 20rpx;
}

.food-info {
  flex: 1;
}

.food-name {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 10rpx;
  display: block;
}

.food-price {
  font-size: 28rpx;
  color: var(--primary-color);
}

.food-quantity {
  font-size: 28rpx;
  color: var(--light-text);
}

/* 备注信息样式 */
.remark-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.remark-input {
  width: 100%;
  height: 160rpx;
  font-size: 28rpx;
  color: var(--text-color);
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #f5f5f5;
  border-radius: var(--border-radius);
}

/* 优惠券样式 */
.coupon-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.coupon-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: var(--light-text);
}

/* 支付信息样式 */
.payment-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.payment-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: var(--text-color);
}

.payment-item.total {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f5f5f5;
  font-weight: bold;
}

.discount {
  color: var(--primary-color);
}

.total-price {
  color: var(--primary-color);
  font-size: 36rpx;
}

/* 底部支付栏样式 */
.payment-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.price-info {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
}

.payment-methods {
  display: flex;
  margin-right: 30rpx;
}

.payment-method {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  border: 2rpx solid #eee;
  transition: all 0.3s ease;
}

.payment-method.active {
  border-color: var(--primary-color);
  background: var(--secondary-color);
}

.payment-method image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.payment-method text {
  font-size: 24rpx;
  color: var(--text-color);
}

.submit-btn {
  width: 200rpx;
  height: 80rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 105, 180, 0.3);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: scale(0.95);
  background: var(--accent-color);
}

/* 图标样式 */
.icon-arrow {
  color: var(--light-text);
  font-size: 24rpx;
} 